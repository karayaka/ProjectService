@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <label>İsim</label>
            <input id="name" />
            <br />
            <label>Açıklama</label>
            <input id="desc" />
            <br/>
            <button type="button" onclick="saveCategori()">Kaydet</button>
            <button type="button" onclick="cleanCategory()">Temizle</button>
         </div>
        <div class="row">
            <table id="myTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>Kategori Açıklaması</th>
                        <th>Detay</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {


    <script src="~/js/service.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            drawDatable();
                
        });

        

    </script>
}
